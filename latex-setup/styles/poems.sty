\usepackage{verse}
\usepackage{lipsum}

% Define the visual separator
\newcommand{\poemseparator}{
  \begin{center}
    \vspace{1em}
    $\ast$~~~$\ast$~~~$\ast$
    \vspace{1em}
  \end{center}
}

% Define a command for titled poems
\newenvironment{titledpoem}
  {\poemseparator
   \itshape
   \ifdim\paperwidth<6in  % If paper width is smaller than 6in (mobile layout)
     \setlength{\leftskip}{0pt}  % No indentation
   \else
     \setlength{\leftskip}{1em}  % Default indentation for larger screens
   \fi
   }
  {}

% Define a command for each stanza
\newcommand{\stanza}[1]{%
  \begingroup
  \ifdim\paperwidth<6in
    \begin{minipage}{0.8\textwidth}  % Use full width for mobile layout
  \else
    \begin{minipage}{0.8\textwidth}  % Use smaller width for larger screens
  \fi
    #1
  \end{minipage}
  \vspace{0.75em}  % Add space between stanzas
  \endgroup
}